                    <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>*@
            <a class="nav-link text-dark" asp-action="LogOut" asp-controller="Account">LogOut</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="ChangePassword" asp-controller="Account">Change password</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="SignUp" asp-controller="Account">Register</a>
